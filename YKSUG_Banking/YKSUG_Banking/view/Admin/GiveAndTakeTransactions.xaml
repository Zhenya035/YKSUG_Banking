<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YKSUG_Banking.view.Admin.GiveAndTakeTransactions">

    <StackLayout>
        <Frame>
            <StackLayout>
                <Label x:Name="NameLabel" Text="" HorizontalOptions="FillAndExpand"/>
                <Label x:Name="CardLabel" Text="" HorizontalOptions="FillAndExpand"/>
                <Label x:Name="MoneyLabel" Text="" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        </Frame>


        <Entry x:Name="MoneyEntry" Text="" Placeholder="Введите сумму" Margin="0, 50,0,0" />
        <Entry x:Name="DescriptionEntry" Text="" Placeholder="Введите описание" />

        <StackLayout Orientation="Horizontal">
            <Button Text="Дать" Clicked="GiveTransaction" />
            <Button Text="Забрать" Clicked="TakeTransaction" />
            <Button Text="Испоьзовать бонус" Clicked="Check"/>
            <Button Text="Выдать бонус" Clicked="GiveBonus"/>
        </StackLayout>
    </StackLayout>

</ContentPage>