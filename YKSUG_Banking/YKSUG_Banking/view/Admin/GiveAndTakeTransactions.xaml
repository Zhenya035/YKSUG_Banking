<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YKSUG_Banking.view.Admin.GiveAndTakeTransactions">
    
    <StackLayout>
        <Label x:Name="NameLabel" Text=""/>
        <Label x:Name="CardLabel" Text=""/>
        <Label x:Name="MoneyLabel" Text=""/>
        
        <Entry x:Name="MoneyEntry" Text="" Placeholder="Введите сумму" Margin="0, 50,0,0"/>
        <Entry x:Name="DescriptionEntry" Text="" Placeholder="Введите описание"/>
        
        <StackLayout Orientation="Horizontal">
            <Button Text="Дать" Clicked="GiveTransaction"/>
            <Button Text="Забрать" Clicked="TakeTransaction"/>
        </StackLayout>
    </StackLayout>
    
</ContentPage>