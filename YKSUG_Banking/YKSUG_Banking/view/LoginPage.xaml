<?xml version="1.0" encoding="utf-8"?>


<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YKSUG_Banking.view.LoginPage"
             BackgroundColor = "#FFFFFF">

    
    <StackLayout>
        
        <Label Text="Авторизация" HorizontalOptions="Center" FontSize="Large" Margin="0,200,0, 0" TextColor="Black" />
        <Label Text="Введите имя пользователя и пароль" HorizontalOptions="Center" TextColor="Black" />

        <Frame CornerRadius="20" Margin="30, 30, 30,10" Padding="3" BorderColor="#5796E4">
            <Entry x:Name="UserNameField" Text="" Placeholder="Имя пользователя" TextColor="Black"
                   PlaceholderColor="Black" FontSize="15"/>
        </Frame>

        <Frame CornerRadius="20" Margin="30, 0, 30,0" Padding="3" BorderColor="#5796E4">
            <Entry x:Name="PasswordField" Text="" Placeholder="Пароль" IsPassword="True" TextColor="Black"
                   PlaceholderColor="Black" FontSize="15"/>
        </Frame>

        <Button x:Name="LoginButton" Text="Войти" Clicked="Authentication" Margin="30,0,30,0" CornerRadius="40"
                TextColor="White" BackgroundColor="#5796E4" />
    </StackLayout>

</ContentPage>